{% extends "pages/base.njk" %}

{% block title %}
    Deployment Info - Devel without a Cause
{% endblock %}

{% block description %}
    Deployment info.
{% endblock %}

{% block socialImage %}{% endblock %}
{% block socialImageAlt %}{% endblock %}

{% block scripts %}
    /scripts/base.js
{% endblock %}

{% block styles %}
    ./deployment.css
{% endblock %}

{% block head %}
    <meta name="robots" content="noindex">
{% endblock %}

{% block content %}
    <h1>Deployment Info</h1>
    <ul>
        <li>
            Commit: <a href="{{ repo.href }}/commit/{{ git.sha }}">
                {{- git.sha | short -}}
            </a>
            {%- if not git.clean %}
                (with local changes)
            {%- endif -%}
            .
        </li>
        <li>Build type: {{ environment }}</li>
    </ul>
{% endblock %}
