{
    "editor.rulers": [
        80
    ],
    "editor.tabSize": 4,
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "typescript.tsdk": "./node_modules/typescript/lib",
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "cSpell.enableFiletypes": [
        "!javascript",
        "!typescript",
        "md"
    ],
    "[markdown]": {
        "editor.wordWrap": "off",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.rulers": [
            // Important code should be less than this limit for mobile devices.
            // You can extend past it for unimportant "just needs to be there to
            // compile and users can scroll to see it if they really care, but
            // it's not actually relevant to the point I'm making".
            57,
            80  // General length limit.
        ]
    },
